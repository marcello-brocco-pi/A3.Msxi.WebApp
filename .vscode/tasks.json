{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "ng serve",
        "type": "shell",
        "command": "npm run start",
        "isBackground": true,
        "problemMatcher": {
          "owner": "angular",
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*Initial chunk files*",
            "endsPattern": ".*generation complete.*"
          }
        }
      }
    ]
  }
  